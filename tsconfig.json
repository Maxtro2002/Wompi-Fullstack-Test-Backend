{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"],
      "infrastructure/*": ["infrastructure/*"],
      "application/*": ["application/*"],
      "domain/*": ["domain/*"],
      "shared/*": ["shared/*"]
    }
  }
}
